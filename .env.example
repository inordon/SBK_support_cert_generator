# .env.example
# Основные настройки
BOT_TOKEN=your_bot_token_here
API_KEY=your_secret_api_key_here

# База данных
POSTGRES_PASSWORD=strong_postgres_password
CERT_APP_PASSWORD=strong_app_password
DATABASE_URL=postgresql://cert_app:strong_app_password@localhost:5432/certificates_db

# Redis
REDIS_PASSWORD=strong_redis_password
REDIS_URL=redis://:strong_redis_password@localhost:6379/0

# Пользователи (ID через запятую)
ALLOWED_USERS=123456789,987654321
VERIFY_USERS=111111111,222222222
NOTIFICATION_CHAT=-1001234567890

# Пути и порты
CERTIFICATES_DIR=./certificates
CERTIFICATES_PATH=./certificates
POSTGRES_PORT=5432
REDIS_PORT=6379
API_PORT=8000
NGINX_PORT=80
NGINX_SSL_PORT=443

# Логирование
LOG_LEVEL=INFO

# Окружение
ENVIRONMENT=production